@model Group03_PS.Models.Login;






<div class="signup-form" style="width:60%;margin:100px;margin-left:150px;">
    <form asp-controller="Home" asp-action="Register" asp-method="post" role="form">
        <h2>Sign Up</h2>
        <hr>
        <div class="form-group">
            <label asp-for="Id">User ID</label>
            <input asp-for="Id" class="form-control" placeholder="Enter User ID" name="Id" required="required">
            <label asp-for="Email">Email</label>
            <input type="text" asp-for="Email" class="form-control" placeholder="Enter User Name" name="Email" required="required">
            <label asp-for="ActorId">Actor Id</label>
            <div class="form-group">
                <select class="form-control" asp-for="ActorId">
                    <option class="hidden" selected="" disabled="">Please select one</option>
                    <option value="4">Accountant</option>
                    <option value="1">Admin</option>
                    <option value="2">Faculty</option>
                    <option value="3">Student</option>
                </select>
            </div>


            <label asp-for="Password">Password</label>
            <input type="password" asp-for="Password" class="form-control" placeholder="Enter User Phone Nummber" name="Password" required="required">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block btn-lg">Save</button>
        </div>

    </form>
</div>